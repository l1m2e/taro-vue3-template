{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"removeComments": false,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"outDir": "lib",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"baseUrl": ".",
		"rootDir": ".",
		"jsx": "preserve",
		"allowJs": true,
		"resolveJsonModule": true,
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["./src", "./types", "global.d.ts", "src/auto-imports.d.tsd.ts", "./src/**/*", "auto-imports.d.ts", "auto-imports.d.ts"],
	"compileOnSave": false
}
